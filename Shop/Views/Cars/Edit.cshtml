@model Shop.Models.Car.CarEditViewModel


@if (Model.Id.HasValue)
{
	<h1>Update</h1>
}
else
{
	<h1>Add</h1>
}


<div>
	<form method="post" enctype="multipart/form-data">
		<input asp-for="Id" type="hidden" />

		<div class="form-group row">
			<label asp-for="Brand" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Brand" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Model" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Model" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Color" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Color" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="NameOfOwner" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="NameOfOwner" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Price" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Price" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Weight" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Weight" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="EnginePower" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="EnginePower" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Mileage" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Mileage" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="BuiltDate" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="BuiltDate" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="MaintanceDate" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="MaintanceDate" class="form-control" />
			</div>
		</div>
		<hr/>


		@if (Model.Id.HasValue)
		{
			<input asp-action="edit" asp-controller="car" type="submit" class="btn btn-primary" value="Update" />
		}
		else
		{
			<input asp-action="add" asp-controller="car" type="submit" class=" btn btn-outline-primary" value="Add" />
		}

		<a asp-action="Index" class="btn btn-primary">Index</a>

	</form>
</div>